<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/categoryImage"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome"
            android:layout_height="160dp"/>
        <TextView
            android:id="@+id/number_of_recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_recipe"
            android:drawablePadding="5dp"
            android:layout_margin="10dp"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:paddingStart="10dp"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/btn_design_small"
            android:backgroundTint="#73000000"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:background="#F8F8F8"
            style="@style/alatsiFontFamilyStyle"
            android:gravity="center"
            android:padding="5dp"
            android:layout_below="@id/categoryImage"
            android:textColor="@color/grayTextSecondary"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>